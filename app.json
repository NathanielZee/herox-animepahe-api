{
  "name": "HeroX AnimepaheAPI",
  "description": "A robust and reliable unofficial REST API for Animepahe with enhanced error handling, automatic retries, and fault tolerance.",
  "repository": "https://github.com/NathanielZee/herox-animepahe-api",
  "logo": "https://animepahe.ru/apple-touch-icon.png",
  "keywords": ["node", "express", "anime", "api", "reliable", "robust", "animepahe"],
  "env": {
    "PORT": {
      "description": "Port number for the server (default: 3000)",
      "required": false
    },
    "BASE_URL": {
      "description": "Base URL for animepahe (default: https://animepahe.ru)",
      "required": false
    },
    "USER_AGENT": {
      "description": "Custom user agent string",
      "required": false
    },
    "COOKIES": {
      "description": "Manual cookie management (optional)",
      "required": false
    },
    "USE_PROXY": {
      "description": "Whether to use proxies (default: false)",
      "required": false
    },
    "PROXIES": {
      "description": "Comma-separated proxy URLs (optional)",
      "required": false
    },
    "REDIS_URL": {
      "description": "Redis connection URL for caching (optional but recommended)",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-redis:mini",
      "as": "REDIS"
    }
  ]
}